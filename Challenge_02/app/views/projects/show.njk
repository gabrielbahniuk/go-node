{% extends 'layouts/default.njk' %}

{% block body %}
<section id="main">
  <div class="container">

      <div class="container">
        <header>
          <h2>Meus projetos ({{ projects.length }})</h2>
          <div class="addon">
            <form action="" method="post">
              <input type="text" name="name" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="../img/plus.svg">
              </button>
            </form>
          </div>
        </header>
      </div>
    <section id="content">
      <div class="project-list">
        {% for project in projects%}
          <a href="/app/projects/{{ project.id }}">{{ project.title }}</a>
        {% endfor %}
       </div>
    </section>
  </div>
</section>

{% endblock %}
